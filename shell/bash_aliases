# Git
alias g='git'
alias ga='git add'
alias gall="git add -A"
alias gamend='git commit --amend'
alias gb='git branch'
alias gbd='git branch -d'
alias gbm='git branch -m'
alias gc='git commit'
alias gcall='git add -A && git commit'
alias gclean='git clean -fd'
alias gcm='git checkout master'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gcommend='git commit --amend --no-edit'
alias gcp='git cherry-pick'
alias gd='git diff'
alias gdel='git branch -D'
alias gds='git diff --staged'
alias gf='git fetch --all --prune'
alias gfp='git push --force'
alias gl='git log --color --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an> %Cgreen(%cr)%Creset" --abbrev-commit --branches'
alias glc='git shortlog --summary --numbered'
alias gm='git merge'
alias gmv='git mv'
alias gp='git push'
alias gplease='git push --force-with-lease'
alias gpristine='git reset --hard && git clean -dfx'
alias gpuoc='git push --set-upstream origin $(git symbolic-ref --short HEAD)'
alias gr='git remote'
alias gra='git remote add'
alias grc='git rebase --continue'
alias greb='f(){ git rebase -i HEAD~"$1"; unset -f f; }; f'
alias grm='git rm'
alias grv='git remote -v'
alias gst='git status'
alias gstaash='git stash --include-untracked'
alias gstash='git stash'
alias gt='git tag'
alias gta='git tag -a'
alias gtd='git tag -d'
alias gtl='git tag -l'
alias gup='git fetch && git rebase --autostash FETCH_HEAD'

# macOS
