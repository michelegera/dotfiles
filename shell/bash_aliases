# General
alias cat='bat'
alias cl='clear'
alias du='ncdu --color dark -rr -x --exclude .git --exclude node_modules'
alias help='tldr'
alias ll='ls -lAh'
alias ls='gls --color'
alias mux='tmuxinator'
alias ping='prettyping --nolegend'
alias top='htop'
alias v{,i,im}='nvim'

